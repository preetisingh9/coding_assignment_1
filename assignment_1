import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        int n1=0,n2;
        Scanner sc=new Scanner(System.in);
        System.out.print("enter the value of n:");
        n2=sc.nextInt();
        System.out.println("even numbers in reverse order upto n:");
        while(n2>n1)
        {
            if(n2%2==0)
            {
            System.out.println(n2+"");
            }
            n2--;
        }
    }
}
